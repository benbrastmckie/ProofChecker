{
  "_schema_version": "2.0.0",
  "_last_updated": "2026-01-12T00:00:00Z",
  "_comment": "Centralized error tracking with session-aware aggregation. Errors are logged here by commands and agents when failures occur. The /errors command analyzes this file to create fix plans.",
  "_schema": {
    "error": {
      "id": "string (err_{timestamp})",
      "timestamp": "string (ISO 8601)",
      "type": "string (error category)",
      "severity": "critical|high|medium|low",
      "message": "string (human-readable description)",
      "context": {
        "session_id": "string (sess_{timestamp}_{random})",
        "command": "string (e.g., /implement)",
        "task": "number (task ID)",
        "phase": "number (optional, phase number)",
        "checkpoint": "string (optional, GATE_IN|DELEGATE|GATE_OUT|COMMIT)"
      },
      "trajectory": {
        "delegation_path": "array of strings",
        "failed_at_depth": "number"
      },
      "recovery": {
        "suggested_action": "string",
        "auto_recoverable": "boolean"
      },
      "fix_status": "unfixed|investigating|fixed"
    }
  },
  "errors": [],
  "aggregations": {
    "_comment": "Pattern aggregations for recurring errors",
    "by_type": {},
    "by_session": {},
    "by_task": {}
  }
}
