% ============================================================================
% notation-standards.sty
% Shared notation package for ProofChecker logic documentation
%
% This package provides standard notation used across all theory-specific
% documentation (Logos, Bimodal, etc.). Theory-specific notation files
% should import this package and add specialized notation.
%
% Usage in theory-specific notation files:
%   \RequirePackage{../../latex/notation-standards}
% ============================================================================

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{notation-standards}[2026/01/11 ProofChecker Shared Notation]

% ============================================================================
% Required Packages
% ============================================================================

\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{mathtools}  % For \coloneqq and enhanced math support
% Note: hyperref loaded by formatting.sty with proper options

% ============================================================================
% Modal Operators
% ============================================================================

\newcommand{\nec}{\Box}                    % Necessity (box)
\newcommand{\poss}{\Diamond}               % Possibility (diamond)

% ============================================================================
% Counterfactual and Causal Operators (from txfonts symbolsC)
% ============================================================================

\DeclareSymbolFont{symbolsC}{U}{txsyc}{m}{n}
\SetSymbolFont{symbolsC}{bold}{U}{txsyc}{bx}{n}
\DeclareFontSubstitution{U}{txsyc}{m}{n}
\AtBeginDocument{
  \DeclareMathSymbol{\boxright}{\mathrel}{symbolsC}{"80}       % Would-counterfactual (□→)
  \DeclareMathSymbol{\circleright}{\mathrel}{symbolsC}{"91}    % Would-cause (○→)
  \DeclareMathSymbol{\diamondright}{\mathrel}{symbolsC}{"84}   % Might-counterfactual (◇→)
}

% Might-cause operator (dotted circle arrow)
\newcommand{\dotcircleright}{\mathrel{\mathpalette\dotcirclerighthelper\relax}}
\newcommand{\dotcirclerighthelper}[2]{%
  \ooalign{$#1\circleright$\cr\hidewidth\raise.0ex\hbox{\kern-0.68em$#1\cdot$}\hidewidth\cr}%
}

% ============================================================================
% Truth and Satisfaction Relations
% ============================================================================

\renewcommand{\models}{\vDash}           % Satisfaction relation
\newcommand{\satisfies}{\vDash}           % Satisfaction relation
\newcommand{\notsatisfies}{\not\models}    % Negated satisfaction

% ============================================================================
% Proof Theory
% ============================================================================

\newcommand{\proves}{\vdash}               % Derivability
\newcommand{\context}{\Gamma}              % Proof context

% ============================================================================
% Meta-Variables
% ============================================================================

\newcommand{\metaphi}{\varphi}             % Formula meta-variable
\newcommand{\metapsi}{\psi}                % Formula meta-variable
\newcommand{\metachi}{\chi}                % Formula meta-variable

% ============================================================================
% Model Notation
% ============================================================================

\newcommand{\model}{\mathcal{M}}            % Model symbol

% ============================================================================
% Propositional Connectives (standard names)
% ============================================================================

\newcommand{\imp}{\to}                     % Implication
\renewcommand{\iff}{~\textit{ iff }~}            % Biconditional
\newcommand{\lneg}{\neg}                   % Negation
\newcommand{\falsum}{\bot}                 % Falsity/bottom

% ============================================================================
% Lean Cross-Reference Commands
% ============================================================================

\newcommand{\leansrc}[2]{\texttt{#1}.\texttt{#2}}   % Lean source reference
\newcommand{\leanref}[1]{\texttt{#1}}               % Lean reference

% ============================================================================
% Project References
% ============================================================================

\newcommand{\proofchecker}{\href{https://github.com/benbrastmckie/ProofChecker}{\texttt{ProofChecker}}}

